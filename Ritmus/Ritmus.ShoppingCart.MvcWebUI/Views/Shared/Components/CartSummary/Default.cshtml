@model Ritmus.ShoppingCart.MvcWebUI.Models.CartSummaryViewModel

<div class="col-md-6">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:40%">Ürün</th>
                <th style="width:18%">Fiyat</th>
                <th style="width:22%" class="text-center">Adet</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cart.CartLines)
            {
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-10">
                                <h4 class="nomargin">@item.Product.ProductName</h4>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price">@item.Product.UnitPrice TL</td>
                    <td data-th="Quantity">
                        <input type="number" class="form-control text-center" disabled value="@item.Quantity">
                    </td>
                    <td class="actions" data-th="">

                        <a class="btn btn-xs btn-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.ProductId"><span class="glyphicon glyphicon-remove"></span> Sil</a>
                    </td>
                </tr>
            }

        </tbody>
        <tfoot>
            <tr class="visible-xs">
                <td class="text-center"><strong></strong></td>
            </tr>
            <tr>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong>@Model.Cart.Total TL</strong></td>
            </tr>
        </tfoot>
    </table>
</div>
